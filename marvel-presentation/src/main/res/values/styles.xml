<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CharacterItemList">
        <item name="android:background">@color/marvel_black</item>
    </style>

    <style name="CharacterItemListText" parent="CharacterItemList">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/item_characters_list_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="CharacterDetailHeaderText">
        <item name="android:background">@color/black_transparent_50</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tv_character_detail_header_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CharacterDetailSectionText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tv_character_detail_header_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>